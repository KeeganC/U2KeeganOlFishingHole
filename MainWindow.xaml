<Window x:Class="U2KeeganOlFishingHole.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:U2KeeganOlFishingHole"
        mc:Ignorable="d"
        Title="FishWatch.net" Height="350" Width="525">
    <Grid>
        <TextBox 
            x:Name="txbInput"
            AcceptsReturn="True"
            HorizontalAlignment="Left" 
            Height="299" 
            Margin="10,10,0,0" 
            TextWrapping="Wrap" 
            Text="What is the value of fish today sir?" 
            FontSize="30"
            VerticalAlignment="Top" 
            Width="146"/>
        <Button 
            x:Name="btnGo"
            Content="How many fish can I catch?" 
            HorizontalAlignment="Left" 
            Height="38" 
            Margin="161,10,0,0" 
            VerticalAlignment="Top" 
            Width="155"
            Click="btnGo_Click"/>
        <TextBox 
            x:Name="txbOutput"
            IsReadOnly="True"
            HorizontalAlignment="Left" 
            Height="256" 
            Margin="161,53,0,0" 
            TextWrapping="Wrap" 
            Text="" 
            VerticalAlignment="Top" 
            Width="346"/>
    </Grid>
</Window>
